{
  "enabled": true,
  "connectionString": "Data Source=file.db",
  "numCustomers": 1000,
  "avgNumProdPerSeller": 15,
  "ingestionConfig": {
    "strategy": "TABLE_PER_WORKER",
    "concurrencyLevel": 2,
    "mapTableToUrl": {
      "stock_items": "http://127.0.0.1:5003",
      "products": "http://127.0.0.1:5008"
    }
  },
  "runs": [
    {
      "numProducts": 1000,
      "customerDistribution": "NON_UNIFORM",
      "sellerDistribution": "NON_UNIFORM",
      "keyDistribution": "NON_UNIFORM"
    },
    {
      "numProducts": 1000,
      "customerDistribution": "UNIFORM",
      "sellerDistribution": "UNIFORM",
      "keyDistribution": "UNIFORM"
    }
  ],
  "postRunTasks": [
    {
      "name": "cart",
      "url": "http://127.0.0.1:5001/reset"
    },
    {
      "name": "stock",
      "url": "http://127.0.0.1:5003/reset"
    },
    {
      "name": "product",
      "url": "http://127.0.0.1:5008/reset"
    }
  ],
  "transactionDistribution": {
    // "CUSTOMER_SESSION": 100 // 70,
    // "UPDATE_DELIVERY": 100
    "PRICE_UPDATE": 99,
    "DELETE_PRODUCT": 100
  },
  "executionTime": 10000, // 1 minute by default
  "delayBetweenRequests": 0,
  "concurrencyLevel": 5, // 10000,
  "streamingConfig": {
    "type": "REDIS",
    "host": "localhost",
    "port": 6379,
    "streams": [
      "DeliveryNotification",
      "InvoiceIssued",
      "PaymentConfirmed",
      "PaymentFailed",
      "Product",
      "ProductUpdate",
      "ReserveStock",
      "ShipmentNotification",
      "StockConfirmed",
      "ReserveStockFailed"
    ]
  },
  "customerWorkerConfig": {
    "maxNumberKeysToBrowse": 10,
    "maxNumberKeysToAddToCart": 10,
    "minMaxQtyRange": {
      "min": 1,
      "max": 10
    },
    "delayBetweenRequestsRange": {
      "min": 1,
      "max": 1000
    },
    "checkoutProbability": 100,
    "voucherProbability": 5,
    "maxNumberVouchers": 10,
    "productUrl": "http://127.0.0.1:5008",
    "cartUrl": "http://127.0.0.1:5001",
    "interactive": false
  },
  "sellerWorkerConfig": {
    "interactive": false,
    "delayBetweenRequestsRange": {
      "min": 1,
      "max": 1000
    },
    "sellerUrl": "http://127.0.0.1:5006",
    "productUrl": "http://127.0.0.1:5008"
  },
  "deliveryWorkerConfig": {
    "shipmentUrl": "http://127.0.0.1:5005"
  }
}

